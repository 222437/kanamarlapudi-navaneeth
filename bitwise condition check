#include<stdio.h>
int main()
{
        int data,bit;
        printf("enter int data:");
        scanf("%d",&data);
        printf("enter bit-position(0--31)to check:");
        scanf("%d",&bit);
        if ((bit<0)&&(bit<=31))
{
        printf("error:invalid bit supplied\n");
}
        printf("bit %d in %d is %d\n",bit,data,(data>>bit)&1);
        (data&(1<bit))?printf("bit is set\n"):printf("bit is clear\n");
}
